<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>GCL WEB</display-name>
    <welcome-file-list>
        <!--<welcome-file>jsp/jspMain/main.jsp</welcome-file>-->
        <welcome-file>jsp/login.jsp</welcome-file>
        <!--<welcome-file>testFile/appFiles.jsp</welcome-file>-->
        <!--<welcome-file>testFile/appVersion.jsp</welcome-file>-->
        <!--<welcome-file>testFile/company.jsp</welcome-file>-->
        <!--<welcome-file>testFile/file.jsp</welcome-file>-->
    </welcome-file-list>

    <context-param>
        <param-name>logDir</param-name>
        <param-value>${logginRoot}</param-value>
    </context-param>

    <context-param>
        <param-name>rootLogLevel</param-name>
        <param-value>${logginLevel}</param-value>
    </context-param>

    <context-param>
        <param-name>consoleLogginLevel</param-name>
        <param-value>${consoleLogginLevel}</param-value>
    </context-param>

    <context-param>
        <param-name>cfgPropertiesPath</param-name>
        <param-value>${cfgPropertiesPath}</param-value>
    </context-param>

    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/log4j.xml</param-value>
    </context-param>
    <listener>
        <listener-class>
            com.tt.javaserver.web.listener.Log4jConfigListener
        </listener-class>
    </listener>
    <!-- spring的监听器 -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <listener>
        <listener-class>
            com.tt.javaserver.web.listener.WebContextListener
        </listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext.xml</param-value>
    </context-param>

    <servlet>
        <servlet-name>springmvc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:spring-mvc.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>springmvc</servlet-name>
        <url-pattern>*.action</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/easyui/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/img/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/pages/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

