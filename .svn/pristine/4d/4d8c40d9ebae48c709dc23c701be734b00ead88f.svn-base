        function getDir(tree, node)
		{
            var sDir = "";
			if(node)
			{
			   var parentNode = tree.tree('getParent', node.target);
			   while (parentNode)
			   {
					sDir = parentNode.text + "\\\\" + sDir; 
					parentNode = tree.tree('getParent', parentNode.target);
			   }
			}
			return sDir;
		}

